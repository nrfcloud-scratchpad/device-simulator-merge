{
  "name": "@nrfcloud/dfu-device-simulator",
  "version": "0.0.0-development",
  "description": "AWS IoT Thing simulator for nRF91 DFU",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write \"./src/*.ts\"",
    "prettier:lint": "prettier --list-different \"./src/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/dfu-device-simulator.git"
  },
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/dfu-device-simulator/issues"
  },
  "homepage": "https://github.com/nRFCloud/dfu-device-simulator#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@nrfcloud/tslint-config": "^3.8.0",
    "@types/aws-iot-device-sdk": "^2.1.1",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.0.0",
    "@types/uuid": "^3.4.4",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.16.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.352.0",
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "dotenv": "^8.0.0",
    "tcomb": "^3.2.28",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  },
  "files": [
    "package-lock.json",
    "dist",
    "bin",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  }
}
